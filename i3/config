# resize window (you can also use the mouse for that)
mode "resize" {
	# These bindings trigger as soon as you enter the resize mode

	#slow
	bindsym ctrl+l resize grow width 5 px or 5 ppt
	bindsym ctrl+h resize shrink width 5 px or 5 ppt
	bindsym ctrl+k resize grow height 5 px or 5 ppt
	bindsym ctrl+j resize shrink height 5 px or 5 ppt

	#"normal"
	bindsym l resize grow width 10 px or 10 ppt
	bindsym h resize shrink width 10 px or 10 ppt
	bindsym k resize grow height 10 px or 10 ppt
	bindsym j resize shrink height 10 px or 10 ppt

	#fast
	bindsym Shift+l resize grow width 20 px or 20 ppt
	bindsym Shift+h resize shrink width 20 px or 20 ppt
	bindsym Shift+k resize grow height 20 px or 20 ppt
	bindsym Shift+j resize shrink height 20 px or 20 ppt

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"


